        const chapterData = {
            1: { nome: "Reino de Pythos", icon: '🐍', weeks: [1, 6], realm_intro_key: 'realm_intro_1',
                hotspot: { top: '35%', left: '15%', width: '20%', height: '25%' } },
            2: { nome: "Terras de Queryland", icon: '📜', weeks: [7, 12], realm_intro_key: 'realm_intro_2',
                hotspot: { top: '55%', left: '30%', width: '20%', height: '25%' } },
            3: { nome: "Torres da Visão e Eficiência", icon: '🔮', weeks: [13, 18], realm_intro_key: 'realm_intro_3',
                hotspot: { top: '20%', left: '50%', width: '20%', height: '25%' } },
            4: { nome: "O Mercado dos Heróis", icon: '🛡️', weeks: [19, 22], realm_intro_key: 'realm_intro_4',
                hotspot: { top: '65%', left: '60%', width: '20%', height: '20%' } },
            5: { nome: "A Grande Arena", icon: '👑', weeks: [23, 25], realm_intro_key: 'realm_intro_5',
                hotspot: { top: '10%', left: '75%', width: '15%', height: '20%' } },
        };

        let currentWeek = null;
        let completedWeeks = new Set(JSON.parse(localStorage.getItem('completedWeeks') || '[]'));
        let currentLanguage = localStorage.getItem('currentLanguage') || 'pt';

        // Main content sections
        const homeSection = document.getElementById('home-section');
        const avatarCreatorSection = document.getElementById('avatar-creator-section');
        const progressSection = document.getElementById('progress-section');
        const mapSection = document.getElementById('map-section');
        const realmDetailSection = document.getElementById('realm-detail-section'); // New realm detail section
        const contentDisplaySection = document.getElementById('content-display');
        const summaryChartsSection = document.getElementById('summary-charts-section');

        const sections = {
            'home': homeSection,
            'avatar-creator': avatarCreatorSection,
            'progress-section': progressSection,
            'map-section': mapSection,
            'realm-detail-section': realmDetailSection, // Added realm detail
            'content-display': contentDisplaySection,
            'summary-charts-section': summaryChartsSection
        };

        // Existing elements
        const detailsContainer = document.getElementById('details-container');
        const welcomeMessage = document.getElementById('welcome-message');
        const weekTitle = document.getElementById('week-title');
        const weekDescription = document.getElementById('week-description');
        const weekConcepts = document.getElementById('week-concepts');
        const weekTools = document.getElementById('week-tools');
        const weekProject = document.getElementById('week-project');
        const weekYoutubeLinksContainer = document.getElementById('week-youtube-links-container');
        const weekYoutubeLinks = document.getElementById('week-youtube-links');
        const weekBooksRefsContainer = document.getElementById('week-books-refs-container');
        const weekBooksRefs = document.getElementById('week-books-refs');
        const mapSectionContent = document.getElementById('map-section-content'); // Map image container
        const realmDetailTitle = document.getElementById('realm-detail-title');
        const realmDetailDescription = document.getElementById('realm-detail-description');
        const realmWeeksContainer = document.getElementById('realm-weeks-container');
        const chapterNav = document.getElementById('chapter-nav');
        const markCompleteBtn = document.getElementById('markCompleteBtn');
        const progressBar = document.getElementById('progressBar');
        const progressText = document.getElementById('progressText');
        const openLibraryBtn = document.getElementById('openLibraryBtn');
        const libraryModal = document.getElementById('libraryModal');
        const closeModalBtn = document.getElementById('closeModalBtn');
        const booksList = document.getElementById('booksList');
        const startJourneyBtn = document.getElementById('startJourneyBtn');

        // Avatar elements
        const avatarCanvas = document.getElementById('avatarCanvas');
        const ctx = avatarCanvas.getContext('2d');
        const bodyOptions = document.getElementById('body-options');
        const eyesOptions = document.getElementById('eyes-options');
        const mouthOptions = document.getElementById('mouth-options');
        const saveAvatarBtn = document.getElementById('saveAvatarBtn');

        let avatarConfig = {
            body: 'square',
            eyes: 'dot',
            mouth: 'smile'
        };

        function applyTranslations() {
            document.querySelectorAll('[data-key]').forEach(element => {
                const key = element.dataset.key;
                if (translations[currentLanguage] && translations[currentLanguage][key]) {
                    element.textContent = translations[currentLanguage][key];
                }
            });

            // Update nav buttons
            document.querySelectorAll('.nav-tab').forEach(tab => {
                const section = tab.dataset.section;
                const chapter = tab.dataset.chapter;
                if (section === 'home') tab.textContent = translations[currentLanguage]['Taberna do Viajante'];
                else if (section === 'avatar-creator') tab.textContent = translations[currentLanguage]['Forja do Herói'];
                else if (section === 'progress-section') tab.textContent = translations[currentLanguage]['Diário de Bordo'];
                else if (section === 'map-section') tab.textContent = translations[currentLanguage]['O Grande Mapa dos Reinos'];
                else if (section === 'summary-charts-section') tab.textContent = translations[currentLanguage]['Oráculo dos Reinos'];
                else if (chapter && chapterData[chapter]) {
                    tab.textContent = chapterData[chapter].nome; // Chapter names are part of chapterData
                }
            });

            // Re-render charts with new labels
            if (sections['summary-charts-section'] && !sections['summary-charts-section'].classList.contains('hidden')) {
                createTopicsChart();
                createPomodoroChart();
            }

            // Update current week details if visible
            if (currentWeek && !contentDisplaySection.classList.contains('hidden')) {
                renderWeekDetails(currentWeek);
            }

            // Update realm details if visible
            if (!realmDetailSection.classList.contains('hidden') && realmDetailSection.dataset.chapter) {
                renderRealmDetails(parseInt(realmDetailSection.dataset.chapter));
            }

            updateProgress(); // Update progress text
            populateLibraryModal(); // Update library modal content
        }

        function switchLanguage(lang) {
            currentLanguage = lang;
            localStorage.setItem('currentLanguage', lang);
            applyTranslations();
        }

        function showSection(sectionId, chapterId = null, weekNumber = null) {
            for (const id in sections) {
                const sectionElement = sections[id];
                if (sectionElement) {
                    sectionElement.classList.add('hidden');
                }
            }
            const targetSectionElement = sections[sectionId];
            if (targetSectionElement) {
                targetSectionElement.classList.remove('hidden');
            }

            if (sectionId === 'content-display') {
                if (currentWeek) {
                    if (detailsContainer) detailsContainer.style.display = 'block';
                    if (welcomeMessage) welcomeMessage.style.display = 'none';
                } else {
                    if (detailsContainer) detailsContainer.style.display = 'none';
                    if (welcomeMessage) welcomeMessage.style.display = 'block';
                }
            } else {
                if (detailsContainer) detailsContainer.style.display = 'none';
                if (welcomeMessage) welcomeMessage.style.display = 'none';
            }

            document.querySelectorAll('.nav-tab').forEach(tab => {
                tab.classList.remove('active-tab');
                if (tab.dataset.section === sectionId) {
                    tab.classList.add('active-tab');
                }
                if (sectionId === 'content-display' && chapterId && tab.dataset.chapter == chapterId) {
                    tab.classList.add('active-tab');
                }
            });

            if (sectionId === 'summary-charts-section') {
                createTopicsChart();
                createPomodoroChart();
            }
        }

        function updateProgress() {
            const totalWeeks = journeyData[currentLanguage].length;
            const completedCount = completedWeeks.size;
            const percentage = (completedCount / totalWeeks) * 100;
            progressBar.style.width = `${percentage}%`;
            progressText.textContent = `${percentage.toFixed(0)}% ${translations[currentLanguage]['progress_text'].replace('0%', '').replace('(0/25 Semanas)', `(${completedCount}/${totalWeeks} Semanas)`)}`;

            document.querySelectorAll('.map-realm-hotspot').forEach(realmElement => {
                const chapterNum = parseInt(realmElement.dataset.chapter);
                const chapterWeeks = chapterData[chapterNum].weeks;
                const totalChapterWeeks = chapterWeeks[1] - chapterWeeks[0] + 1;
                let completedChapterWeeks = 0;
                for (let i = chapterWeeks[0]; i <= chapterWeeks[1]; i++) {
                    if (completedWeeks.has(i)) {
                        completedChapterWeeks++;
                    }
                }
                if (completedChapterWeeks === totalChapterWeeks) {
                    realmElement.classList.add('completed-realm');
                } else {
                    realmElement.classList.remove('completed-realm');
                }
            });

            document.querySelectorAll('.realm-week-item').forEach(weekItem => {
                const weekNum = parseInt(weekItem.dataset.week);
                if (completedWeeks.has(weekNum)) {
                    weekItem.classList.add('completed');
                } else {
                    weekItem.classList.remove('completed');
                }
            });
        }

        function renderWeekDetails(weekNumber) {
            const weekData = journeyData[currentLanguage].find(w => w.semana === weekNumber);
            if (!weekData) return;
            
            currentWeek = weekNumber;
            showSection('content-display', weekData.capitulo);

            weekTitle.textContent = `${translations[currentLanguage]['week_title_prefix'] || 'Semana'} ${weekData.semana}: ${weekData.titulo}`;
            weekDescription.textContent = weekData.descricao;
            weekConcepts.innerHTML = weekData.conceitos_chave.map(c => `<li>${c}</li>`).join('');
            weekTools.textContent = weekData.ferramentas;
            weekProject.textContent = weekData.projeto;

            if (weekData.youtube_links && weekData.youtube_links.length > 0) {
                weekYoutubeLinksContainer.style.display = 'block';
                weekYoutubeLinks.innerHTML = weekData.youtube_links.map(link => `<li><a href="${link.url}" target="_blank" class="text-blue-600 hover:underline">${link.title}</a></li>`).join('');
            } else {
                weekYoutubeLinksContainer.style.display = 'none';
            }

            if (weekData.books_refs && weekData.books_refs.length > 0) {
                weekBooksRefsContainer.style.display = 'block';
                weekBooksRefs.innerHTML = weekData.books_refs.map(book => `<li>"${book.title}" ${translations[currentLanguage]['by_author'] || 'por'} ${book.author}</li>`).join('');
            } else {
                weekBooksRefsContainer.style.display = 'none';
            }

            markCompleteBtn.onclick = () => toggleWeekCompletion(weekNumber);
            updateMarkCompleteButtonState(weekNumber);
            updateMapActiveState(weekData.capitulo);
        }

        function toggleWeekCompletion(weekNumber) {
            if (completedWeeks.has(weekNumber)) {
                completedWeeks.delete(weekNumber);
            } else {
                completedWeeks.add(weekNumber);
            }
            localStorage.setItem('completedWeeks', JSON.stringify(Array.from(completedWeeks)));
            updateProgress();
            updateMarkCompleteButtonState(weekNumber);
        }

        function updateMarkCompleteButtonState(weekNumber) {
            if (completedWeeks.has(weekNumber)) {
                markCompleteBtn.textContent = translations[currentLanguage]['mark_complete_button_unmark'];
                markCompleteBtn.classList.remove('bg-[var(--color-forest-green)]', 'hover:bg-[#3E6649]');
                markCompleteBtn.classList.add('bg-[var(--color-soft-grey)]', 'hover:bg-[#5a6b7a]');
            } else {
                markCompleteBtn.textContent = translations[currentLanguage]['mark_complete_button'];
                markCompleteBtn.classList.remove('bg-[var(--color-soft-grey)]', 'hover:bg-[#5a6b7a]');
                markCompleteBtn.classList.add('bg-[var(--color-forest-green)]', 'hover:bg-[#3E6649]');
            }
        }

        function setupMap() {
            // Set the actual map image as background
            mapSectionContent.style.backgroundImage = `url('http://googleusercontent.com/file_content/4')`;

            let hotspotsHTML = '';
            for (const chapterKey in chapterData) {
                const chapter = chapterData[chapterKey];
                const hotspotStyle = `top: ${chapter.hotspot.top}; left: ${chapter.hotspot.left}; width: ${chapter.hotspot.width}; height: ${chapter.hotspot.height};`;
                hotspotsHTML += `
                    <div class="map-realm-hotspot flex flex-col items-center justify-center" style="${hotspotStyle}" data-chapter="${chapterKey}">
                        <span class="map-realm-icon">${chapter.icon}</span>
                        <span class="text-sm md:text-base">${chapter.nome}</span>
                    </div>
                `;
            }
            mapSectionContent.innerHTML = hotspotsHTML;

            document.querySelectorAll('.map-realm-hotspot').forEach(hotspot => {
                hotspot.addEventListener('click', () => {
                    const chapterNum = parseInt(hotspot.dataset.chapter);
                    renderRealmDetails(chapterNum);
                });
            });
        }

        function updateMapActiveState(chapterNumber) {
            document.querySelectorAll('.map-realm-hotspot').forEach(hotspot => {
                if (parseInt(hotspot.dataset.chapter) === chapterNumber) {
                    hotspot.classList.add('active-realm-hotspot');
                } else {
                    hotspot.classList.remove('active-realm-hotspot');
                }
            });
        }

        function renderRealmDetails(chapterNumber) {
            const chapter = chapterData[chapterNumber];
            if (!chapter) return;

            showSection('realm-detail-section');
            realmDetailSection.dataset.chapter = chapterNumber; // Store current chapter for re-render on language switch

            realmDetailTitle.textContent = chapter.nome;
            realmDetailDescription.textContent = translations[currentLanguage][chapter.realm_intro_key];

            let weeksHTML = '';
            for (let i = chapter.weeks[0]; i <= chapter.weeks[1]; i++) {
                const weekData = journeyData[currentLanguage].find(w => w.semana === i);
                if (weekData) {
                    weeksHTML += `
                        <div class="realm-week-item w-full h-16 flex items-center justify-center rounded-md bg-white shadow-md font-bold text-[var(--color-dark-text)] cursor-pointer transition-all duration-200 hover:bg-[var(--color-muted-gold)] hover:text-white" data-week="${i}">
                            Semana ${i}
                        </div>
                    `;
                }
            }
            realmWeeksContainer.innerHTML = weeksHTML;

            document.querySelectorAll('.realm-week-item').forEach(item => {
                item.addEventListener('click', () => {
                    renderWeekDetails(parseInt(item.dataset.week));
                });
            });
            updateProgress(); // To show completed weeks in realm detail
        }

        function setupNav() {
            // Static nav buttons are already in HTML
            // Add event listeners for all nav tabs
            document.querySelectorAll('.nav-tab').forEach(tab => {
                tab.addEventListener('click', () => {
                    const targetSectionId = tab.dataset.section;
                    const chapterKey = tab.dataset.chapter;
                    if (targetSectionId) {
                        if (chapterKey) { // If it's a chapter button (e.g., from map detail)
                            renderRealmDetails(parseInt(chapterKey)); // Show realm detail for that chapter
                        } else { // For home, avatar, progress, map, summary-charts
                            showSection(targetSectionId);
                        }
                    }
                });
            });
        }
        
        let topicsChartInstance = null;
        let pomodoroChartInstance = null;

        function createTopicsChart() {
            if (topicsChartInstance) topicsChartInstance.destroy();
            const ctx = document.getElementById('topicsChart').getContext('2d');
            topicsChartInstance = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: [
                        translations[currentLanguage]['Magia de Pythos'] || 'Magia de Pythos',
                        translations[currentLanguage]['Escrita Rúnica (SQL/Excel)'] || 'Escrita Rúnica (SQL/Excel)',
                        translations[currentLanguage]['Oráculo Estatístico'] || 'Oráculo Estatístico',
                        translations[currentLanguage]['Automação Arcane'] || 'Automação Arcane',
                        translations[currentLanguage]['Lenda do Herói'] || 'Lenda do Herói'
                    ],
                    datasets: [{
                        label: translations[currentLanguage]['focus_by_domain_chart_title'] || 'Foco por Domínio Mágico',
                        data: [6, 6, 6, 1, 6],
                        backgroundColor: [
                            'var(--color-forest-green)', 
                            'var(--color-earth-brown)', 
                            'var(--color-muted-gold)', 
                            'var(--color-dark-text)', 
                            '#A0522D',
                        ],
                        borderColor: 'var(--color-parchment)',
                        borderWidth: 3
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                color: 'var(--color-dark-text)',
                                font: {
                                    family: "'Lato', sans-serif"
                                }
                            }
                        }
                    }
                }
            });
        }

        function createPomodoroChart() {
            if (pomodoroChartInstance) pomodoroChartInstance.destroy();
            const ctx = document.getElementById('pomodoroChart').getContext('2d');
            pomodoroChartInstance = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: [
                        translations[currentLanguage]['Pythos'] || 'Pythos',
                        translations[currentLanguage]['Rúnica'] || 'Rúnica',
                        translations[currentLanguage]['Oráculo'] || 'Oráculo',
                        translations[currentLanguage]['Automação'] || 'Automação',
                        translations[currentLanguage]['Lenda'] || 'Lenda'
                    ],
                    datasets: [{
                        label: translations[currentLanguage]['arcane_effort_chart_title'] || 'Esforço Arcane (Pomodoros)',
                        data: [96, 112, 80, 80, 80],
                        backgroundColor: 'var(--color-forest-green)',
                        borderColor: '#3E6649',
                        borderWidth: 1,
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                     scales: {
                        x: {
                            beginAtZero: true,
                            ticks: { color: 'var(--color-dark-text)' },
                            grid: { color: 'rgba(0,0,0,0.05)'}
                        },
                        y: {
                           ticks: { color: 'var(--color-dark-text)' },
                           grid: { display: false }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }

        function populateLibraryModal() {
            let allBooks = new Map();
            journeyData[currentLanguage].forEach(week => {
                if (week.books_refs) {
                    week.books_refs.forEach(book => {
                        allBooks.set(`${book.title} - ${book.author}`, book);
                    });
                }
            });

            let sortedBooks = Array.from(allBooks.values()).sort((a, b) => a.title.localeCompare(b.title));
            
            booksList.innerHTML = sortedBooks.map(book => `
                <div class="p-3 bg-[var(--color-parchment)] rounded-md shadow-sm border border-[var(--color-soft-grey)]">
                    <p class="font-bold text-[var(--color-earth-brown)]">"${book.title}"</p>
                    <p class="text-sm text-[var(--color-dark-text)]">${translations[currentLanguage]['by_author'] || 'por'} ${book.author}</p>
                </div>
            `).join('');
        }

        // Avatar Drawing Logic
        function drawAvatar() {
            ctx.clearRect(0, 0, avatarCanvas.width, avatarCanvas.height);
            const centerX = avatarCanvas.width / 2;
            const centerY = avatarCanvas.height / 2;

            // Body
            ctx.fillStyle = '#A0522D'; // Sienna
            if (avatarConfig.body === 'square') {
                ctx.fillRect(centerX - 50, centerY - 50, 100, 100);
            } else if (avatarConfig.body === 'circle') {
                ctx.beginPath();
                ctx.arc(centerX, centerY, 60, 0, Math.PI * 2);
                ctx.fill();
            }

            // Eyes
            ctx.fillStyle = '#2F4F4F'; // Dark Slate Gray
            if (avatarConfig.eyes === 'dot') {
                ctx.beginPath();
                ctx.arc(centerX - 20, centerY - 20, 5, 0, Math.PI * 2);
                ctx.arc(centerX + 20, centerY - 20, 5, 0, Math.PI * 2);
                ctx.fill();
            } else if (avatarConfig.eyes === 'line') {
                ctx.fillRect(centerX - 25, centerY - 22, 15, 4);
                ctx.fillRect(centerX + 10, centerY - 22, 15, 4);
            }

            // Mouth
            ctx.strokeStyle = '#8B0000'; // Dark Red
            ctx.lineWidth = 3;
            ctx.beginPath();
            if (avatarConfig.mouth === 'smile') {
                ctx.arc(centerX, centerY + 20, 20, 0, Math.PI, false);
            } else if (avatarConfig.mouth === 'straight') {
                ctx.moveTo(centerX - 20, centerY + 20);
                ctx.lineTo(centerX + 20, centerY + 20);
            }
            ctx.stroke();
        }

        function setupAvatarControls() {
            document.querySelectorAll('#body-options .option-button').forEach(button => {
                button.addEventListener('click', () => {
                    avatarConfig.body = button.dataset.value;
                    drawAvatar();
                    updateOptionButtonState(bodyOptions, button);
                });
            });
            document.querySelectorAll('#eyes-options .option-button').forEach(button => {
                button.addEventListener('click', () => {
                    avatarConfig.eyes = button.dataset.value;
                    drawAvatar();
                    updateOptionButtonState(eyesOptions, button);
                });
            });
            document.querySelectorAll('#mouth-options .option-button').forEach(button => {
                button.addEventListener('click', () => {
                    avatarConfig.mouth = button.dataset.value;
                    drawAvatar();
                    updateOptionButtonState(mouthOptions, button);
                });
            });

            saveAvatarBtn.addEventListener('click', () => {
                const dataURL = avatarCanvas.toDataURL('image/png');
                alert(translations[currentLanguage]['avatar_saved_message'] || 'Avatar salvo! (A imagem foi gerada e poderia ser baixada ou enviada.)');
                console.log(dataURL);
            });

            function updateOptionButtonState(container, activeButton) {
                container.querySelectorAll('.option-button').forEach(btn => {
                    btn.classList.remove('active-option');
                });
                activeButton.classList.add('active-option');
            }
            updateOptionButtonState(bodyOptions, bodyOptions.querySelector(`[data-value="${avatarConfig.body}"]`));
            updateOptionButtonState(eyesOptions, eyesOptions.querySelector(`[data-value="${avatarConfig.eyes}"]`));
            updateOptionButtonState(mouthOptions, mouthOptions.querySelector(`[data-value="${avatarConfig.mouth}"]`));
        }


        document.addEventListener('DOMContentLoaded', () => {
            // Set initial language and apply translations
            switchLanguage(currentLanguage);

            setupNav();
            setupMap();
            updateProgress();
            setupAvatarControls();
            drawAvatar();

            showSection('home'); // Start on the home section

            startJourneyBtn.addEventListener('click', () => {
                showSection('map-section'); // Navigate to map section
                document.getElementById('main-content').scrollIntoView({ behavior: 'smooth' });
            });

            openLibraryBtn.addEventListener('click', () => {
                populateLibraryModal();
                libraryModal.style.display = 'flex';
            });

            closeModalBtn.addEventListener('click', () => {
                libraryModal.style.display = 'none';
            });

            window.addEventListener('click', (event) => {
                if (event.target === libraryModal) {
                    libraryModal.style.display = 'none';
                }
            });

            document.querySelectorAll('.lang-switcher').forEach(button => {
                button.addEventListener('click', (event) => {
                    switchLanguage(event.target.dataset.lang);
                });
            });
        });

    </script>
</body>
</html>